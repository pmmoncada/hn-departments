              ],
              [
                "04",
                LandUseLookup(4).color,
              ],
              [
                "05",
                LandUseLookup(5).color,
              ],
              [
                "06",
                LandUseLookup(6).color,
              ],
              [
                "07",
                LandUseLookup(7).color,
              ],
              [
                "08",
                LandUseLookup(8).color,
